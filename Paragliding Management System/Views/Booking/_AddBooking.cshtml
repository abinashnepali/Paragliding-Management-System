@model DataAccessLayer.Book
@using Paragliding_Management_System.Models
<form id="frmBook" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Booking" })
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <input asp-for="BookID" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BookedFor" class="control-label"></label>
                    <input asp-for="BookedFor" class="form-control" />
                    <span asp-validation-for="BookedFor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookedBy" class="control-label"></label>
                    <input asp-for="BookedBy" class="form-control" />
                    <span asp-validation-for="BookedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StaffID" class="control-label"></label>
                    <input asp-for="StaffID" class="form-control" />
                    <span asp-validation-for="StaffID" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" id="btnBook" type="button">Book</button>
        <button data-dismiss="modal" id="btnBookCancel" class="btn btn-default" type="button">Cancel</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
